#!/bin/bash
#SBATCH --partition=kern,long,longfat
#SBATCH --job-name=dualsim
#SBATCH --time=6-00:00:00
#SBATCH --mem 32G
#SBATCH --output=dual.out         ### File in which to store job output
#SBATCH --error=dual.err          ### File in which to store job error messages

module load cuda/9.0
module use /projects/apps/shared/modulefiles/
module load python3 tskit SLiM

ran=$(od -N 4 -t uL -An /dev/urandom | tr -d " ")

slim -m -t -d "SIM=${1}" -d N=${2} -d mu=${3} -d r=${4} -d L=${5} -d L0=${6} -d L1=${7} -d RAND=$ran -d m=${8} -d deff=${9} /home/murillor/projects/mimulus_sims/${10}


if [ -d /home/murillor/projects/mimulus_sims/N_${2}_mu_${3}_r_${4}_L_${5}_L0_${6}_L1_${7}_m_${8}_deff_${8} ]   # for file "if [-f /home/rama/file]"
then
    mv /tmp/*N_sim_"${1}"_RAND_"${ran}".trees /home/murillor/projects/mimulus_sims/N_${2}_mu_${3}_r_${4}_L_${5}_L0_${6}_L1_${7}_m_${8}_deff_${8}/
else
    mkdir /home/murillor/projects/mimulus_sims/N_${2}_mu_${3}_r_${4}_L_${5}_L0_${6}_L1_${7}_m_${8}_deff_${8}
    mv /tmp/*N_sim_"${1}"_RAND_"${ran}".trees /home/murillor/projects/mimulus_sims/N_${2}_mu_${3}_r_${4}_L_${5}_L0_${6}_L1_${7}_m_${8}_deff_${8}/
fi
